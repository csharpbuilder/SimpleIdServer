@using FormBuilder.Components.Drag
@using FormBuilder.Helpers
@inject ITranslationHelper translationHelper


<DraggableFormElement IsEditModeEnabled=@IsEditModeEnabled ParentContext="@ParentContext" Context="@Context" TDialog="FormInputDialog" TRecord="FormInputFieldRecord" Record="@Value">
     <Children>
        @if(Value.Type != FormInputTypes.HIDDEN)
        {
            <RadzenFormField Variant="Variant.Outlined" Text="@translationHelper.Translate(Value)" class="fullWidth">
                <RadzenTextBox @bind-Value="@Value.Value"></RadzenTextBox>
            </RadzenFormField>
        }
        else
        {
            <input type="hidden" value="@Value.Value" name="@Value.Name" />
        }
    </Children>
</DraggableFormElement>