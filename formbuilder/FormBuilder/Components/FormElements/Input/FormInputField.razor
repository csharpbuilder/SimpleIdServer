@using FormBuilder.Components.Drag
@using FormBuilder.Helpers
@inject ITranslationHelper translationHelper


<DraggableFormElement IsEditModeEnabled=@IsEditModeEnabled ParentContext="@ParentContext" Context="@Context" TDialog="FormInputDialog" TRecord="FormInputFieldRecord" Record="@Value">
     <Children>
        @if (Value.FormType != FormInputTypes.HIDDEN)
        {
            <RadzenFormField Variant="Variant.Outlined" Text="@translationHelper.Translate(Value, InputData, !IsEditModeEnabled)" class="fullWidth">
                @if(Value.FormType == FormInputTypes.TEXT)
                {                    
                    <RadzenTextBox Name="@Value.Name" @bind-Value="@Value.Value" Disabled=@Value.Disabled></RadzenTextBox>
                }
                else 
                {                    
                    <RadzenPassword Name="@Value.Name" @bind-Value="@Value.Value" Disabled=@Value.Disabled></RadzenPassword>
                }
            </RadzenFormField>
        }
        else
        {
            if(IsEditModeEnabled)
            {
                <span>@($"Configure the hidden type {Value.Name}")</span>
            }
            else
            {
                <input type="hidden" value="@Value.Value" name="@Value.Name" />
            }
        }
    </Children>
</DraggableFormElement>